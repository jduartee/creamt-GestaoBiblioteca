
<div class="modal fade" id="myModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" style="min-width: 75% !important">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Adicionar Endereco</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modal-content">
                <div class="row">
                    <div class="col-md-4">
                        <label>Tipo Endereço</label>
                        <select class="form-control" id="UserEnderecoTipo" name="UserEnderecoTipo" >
                            <option>Selecione</option>

                        </select>

                    </div>
                    <div class="col-md-2">
                        <label>Cep</label>
                        <input type="text" class="form-control" id="Cep" name="Cep"  />
                    </div>
                    <div class="col-md-3">
                        <label>Cidade</label>
                        <input type="text" class="form-control" id="Cidade" name="Cidade"  />
                    </div>
                    <div class="col-md-3">
                        <label>Bairro</label>
                        <input type="text" class="form-control" id="Bairro" name="Bairro"  />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Logradouro</label>
                        <input type="text" class="form-control" id="Logradouro" name="Logradouro"  />
                    </div>
                    <div class="col-md-1">
                        <label>Nº</label>
                        <input type="text" class="form-control" id="Numero" name="Numero"  />
                    </div>
                    <div class="col-md-4">
                        <label>Complemento</label>
                        <input type="text" class="form-control" id="Complemento" name="Complemento" />
                    </div>
                    <div class="col-md-3">
                        <label for="EnderecoPrincipal">Endereço Principal</label>
                        <input type="checkbox" id="EnderecoPrincipal" name="EnderecoPrincipal" />

                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success " onclick="adicionarEndereco()">Adicionar</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="offset-10 col-md-2">
        <button type="button" class="btn btn-success " onclick="$('#myModal').modal('show');">Adicionar Endereço</button>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Tipo Endereço</th>
                    <th>Cep</th>
                    <th>Cidade</th>
                    <th>Bairro</th>
                    <th>Logradouro</th>
                    <th>Nº</th>
                    <th>Complemento</th>
                    <th>Principal</th>
                </tr>
            </thead>
            <tbody id="tbEnderecos"></tbody>
        </table>
    </div>
</div>